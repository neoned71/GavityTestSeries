<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_curved"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/qstn_number"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="QN"
        android:textSize="30dp"
        android:textColor="#099"/>
    <TextView
        android:id="@+id/qstn_subject"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_height="match_parent"
        android:textColor="#055"
        android:text="SUBJECT"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/qstn_marking_scheme"
        android:paddingTop="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_height="match_parent"
        android:text="+4::-1"
        android:textColor="#911"/>




</LinearLayout>
<TextView
    android:layout_height="1dp"
    android:background="#000"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent" />
    <WebView
        android:id="@+id/qstn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></WebView>

    <ImageView
        android:id="@+id/qstn_image"
        android:maxHeight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />


<org.gravityclasses.gavitytestseries.NewCardView
    android:id="@+id/card_o_1"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:onClick="selectSingleAns"
    android:clickable="true"

    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:background="@color/colorGray"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    app:cardElevation="1dp"
    android:minHeight="50dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/nmb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="4.4"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            android:text="(A)"/>
        <WebView
            android:id="@+id/option_1_t"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="3.8"
            android:layout_height="wrap_content">
        </WebView>

        <ImageView
            android:cropToPadding="true"
            android:id="@+id/option_1_i"
            android:layout_width="0dp"
            android:layout_weight="3.8"
            android:layout_height="110dp"
            android:visibility="gone"
            >
        </ImageView>
        <ImageView
            android:id="@+id/selected_1"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:src="@drawable/tick"
            android:layout_height="50dp"
            />
    </LinearLayout>



</org.gravityclasses.gavitytestseries.NewCardView>

